using System;

class Program
{
    static void Main()
    {
        double x, a, y;
        double xstart = 0, xend = 10, dx = 0.25;
        double[] aa = { 1, 1.25, 1.5, 2.0 };

        for (int i = 0; i < aa.Length; i++)
        {
            a = aa[i];
            Console.WriteLine($"Результати для a = {a}:");

            for (x = xstart; x <= xend; x += dx)
            {
                y = a * x * Math.Exp(-x / a);
                Console.WriteLine($"x = {x:F2}, y = {y:F5}");
            }

            Console.WriteLine();
        }
    }
}
